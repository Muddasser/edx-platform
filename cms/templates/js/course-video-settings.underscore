<div class='course-video-settings-container'>
    <div class="course-video-settings-header">
        <div class="action-close-wrapper">
            <button class="action-close-course-video-settings">
                <span class="icon fa fa-times" aria-hidden="true"></span>
                <%-gettext('Close') %>
            </button>
        </div>
    </div>
    <div class='course-video-settings-wrapper'>
        <span class="course-video-settings-title"><%- gettext('Course Video Settings') %></span>
        <div class='transcript-provider-wrapper'>
            <label><%- gettext('Transcript provider: ') %></label>
            <select id='transcript-provider'></select>
        </div>
        <div class='transcript-turnaround-wrapper'>
            <label><%- gettext('Transcript turnaround: ') %></label>
            <select id='transcript-turnaround'></select>
        </div>
        <div class='transcript-fidelity-wrapper'>
            <label><%- gettext('Transcript fidelity: ') %></label>
            <select id='transcript-fidelity'></select>
        </div>
        <div class='transcript-languages-wrapper'>
            <span>Transcript languages</span>
            <div class='transcript-languages-container'>
                <div class='languages-menu-container'></div>
                <button class='button-link action-add-language'><%- gettext('Add a language') %></a>
            </div>
        </div>
        <div class='course-video-settings-footer'>
            <button class="button button action-update-course-video-settings"><%- gettext('Update Settings') %></button>
        </div>
    </div>
</div>